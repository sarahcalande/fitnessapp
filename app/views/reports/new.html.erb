<%= render 'shared/title', page_title: "Reports" %>

<main class="group content">

  <form action="<%= reports_url %>" method="POST">
    <%= form_auth %>

    <h1>Generate a report</h1>

    <div>
      <label for="report-type">Select a Category</label>
      <select name="report[type]" id="report-type">
        <option value="WeighIn">Weigh Ins</option>
        <option value="DailyEntry">Calorie Trends</option>
      </select>
    </div>

    <div>
      <label for="time-span">Select a Range</label>
      <select name="report[time]" id="time-span">
        <option value="7">One week</option>
        <option value="30">One month</option>
        <option value="180">Six months</option>
        <option value="365">One year</option>
      </select>
    </div>

    <div>
      <input type="submit" class="button" value="View Report">
    </div>
  </form>
</main>