<main class="group content">


<form class="group" id="login" action="<%= session_url %>" method="post">
  <h1>Welcome! Please sign in</h1>

  <%= form_auth %>

  <label for="userinfo">Username or E-mail Address</label>
    <input id="userinfo"
      type="text"
      name="user[identifier]">

  <label for="password">Password</label>
    <input id="password"
      type="password"
      name="user[password]">

  <input class="button" type="submit" value="Sign In!">
</form>

<main class="group content">