<main class="group content">
  <section class="searchInput">
    Search the food database
    <%= render 'shared/food_search' %>
  </section>

  <!-- <section class="right searchDisplay">
  </section> -->

  <section class="searchMatch">
    <h3>Matching Foods</h3>
    <% if @foods %>

      <% if @foods.empty? %>
      No matches found!
      <% else %>
      <ul>
        <% @foods.each do |food| %>
          <li><%= link_to "#{food.name}", food_url(food, { entry: params[:daily_entry_id] }) %></li>
        <% end %>
      <% end %>
      </ul>
    <% end %>
  </section>
</main>