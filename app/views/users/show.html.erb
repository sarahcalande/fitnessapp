<style>

  #profile-top {
    margin: 20px auto;
    border: 1px solid black;
  }

  #profile-top div {
    margin-right: 20px;
    border: 1px solid black;
  }

</style>

<main class="group content">

<h1><%= @user.username %>'s Profile</h1>

<article class="group" id="profile-top">
  <div class="float-left">
    <%= image_tag @user.profile_picture.url(:thumb) %>
  </div>

  <div class="float-left">
    <ul>
      <li><%= @user.username %></li>
      <li><%= @user.age %></li>
      <li><%= @user.gender %></li>
      <% if @user.city && @user.state %>
      <li><%= @user.city.capitalize %>, <%= @user.state.upcase %></li>
      <% end %>
    </ul>
  </div>

  <% if @user == current_user %>
    <div class="float-right">
      <div class="link-button">
        <%= link_to "Update your profile", edit_user_url(current_user) %>
      </div>
    </div>
  <% end %>

</article>

<% if @user == current_user %>
  <%= render 'shared/goal_button' %>
<% end %>
</main>