<%= render 'shared/title', page_title: "#{@user.username}" %>

<main class="group content">

  <h1><%= @user.username %>'s Profile</h1>

  <article class="group">

    <div class="group" id="user-profile">
      <div class="group" id="profile-top">
        <div id="user-icon">
          <%= image_tag @user.profile_picture.url(:thumb) %>
        </div>

        <div class="group" id="basic-info">
          <div id="user-asl">
            <ul>
              <li><%= @user.username %></li>
              <li><%= @user.age %></li>
              <li><%= @user.gender %></li>

              <% if @user.city && @user.state %>
                <li><%= @user.city.capitalize %>, <%= @user.state.upcase %></li>
              <% end %>
            </ul>
          </div>

          <% if @user == current_user %>
            <div id="update-profile-button">
              <%= render 'shared/goal_button' %>

              <div class="link-button">
                <%= link_to "Update your profile", edit_user_url(current_user) %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="user-details">
