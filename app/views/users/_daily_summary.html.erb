<style>

  .button_to input {
    background-color: #31DE48;
    border-radius: 5px;
    font-size: 15px;
    border: 2px solid #2C8A39;
    margin: 15px 0px;
    text-align: center;
    width: 175px;
  }

  .button_to input:hover {
    background-color: #2DCF43;
    border: 2px solid #F5F118;
  }

</style>
<article class="group full">
  <header>
    <h1>Daily Summary</h1>
  </header>

  <div id="user-info" class="group">
    <div id="user-picture">
      <%= image_tag current_user.profile_picture.url(:thumb) %>
    </div>

    <div id="pounds-lost">
      <% if current_user.current_wt < current_user.starting_wt %>
        <%= current_user.starting_wt - current_user.current_wt %> pounds lost!
      <% else %>
        0 pounds lost
      <% end %>
    </div>
  </div>

  <div id="food-info" class="group">
    <div id="calorie-box" class="group">
      <div id="calories">
        <%= @calories_remaining %>
      </div>

      <div id="calorie-caption">
        calories remaining
      </div>

      <div id="calorie-breakdown" class="group">
        <%= @daily_entry ? @daily_entry.calories_consumed : 0 %>
        calories consumed
      </div>
    </div>

    <div id="buttons">
      <%= button_to "Add Food", diary_user_url(current_user), method: :get %>
      <%= render 'shared/goal_button' %>
    </div>
  </div>

</article>
