<style>
#user-info {
  float: left;
  width: 100px;
}

#food-info {
  float: right;
  width: 525px;
}

.full header {
  display: block;
  border: 1px solid black;
  background-color: navy;
  color: white;
}

#calories {
  float: left;
}

#buttons {
  float: right;
}

</style>

<main class="group content">

<h2>Welcome back, <%= current_user.username %>!</h2>

<% if current_user %>
  <article class="group full">
    <header>
      <h1>Daily Summary</h1>
    </header>

    <div id="user-info">
      User info!
      Pounds lost!
    </div>

    <div id="food-info">
      <div id="calories">
        Calories
      </div>

      <div id="buttons">
        <%= button_to "Add Food", diary_user_url(current_user), method: :get %>
      </div>
    </div>

  </article>

  <article class="group full">
    <header>
      <h1>News Feed</h1>
    </header>
  </article>

  <%= render 'shared/goal_button' %>

<% end %>
</main>