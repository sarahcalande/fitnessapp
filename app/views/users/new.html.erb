<main class="group content">

<form action="<%= users_url %>" method="post" enctype="multipart/form-data">
  <h1>Create your free account!</h1>

  <%= form_auth %>

  <div class="sign-up-pic">
    <%= image_tag("applecinnamon.png", size: "300x300") %>
  </div>

  <%= render 'shared/errors' %>
  <%= render 'shared/flashes' %>

  <%= render 'shared/basic_info' %>

  <h1>Tell us about yourself</h1>

  <%= render 'shared/wt_ht_activity' %>

  <div>
  Gender
    <input type="radio" name="user[gender]" value="M" id="male">
    <label class="radio" for="male">Male</label>
    <input type="radio" name="user[gender]" value="F" id="female">
    <label class="radio" for="female">Female</label>

    <br>
    <br>
    <%= render 'shared/upload_picture' %>
  </div>

  <div>
    <input class="button" type="submit" value="Continue &rarr;">
  </div>
</form>

</main>