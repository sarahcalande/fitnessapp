<style>

a {
  color: #00F;
  text-decoration: none;
}

header a {
  color: #FFF;
}

</style>

<header>
  <div id="top-strip" class="group">

    <div id="top-strip-content" class="group">
      <div id="logo">
      <%= link_to image_tag("logo.png", size: "128x75"), root_url %>
      </div>

      <section id="user-links" class="group">
        <ul>
        <% if current_user %>
          <li><%= link_to "Hi, #{current_user.username}!", user_url(current_user) %></li>
          <li>
            <% num = "#{current_user.received_messages.count}" %>
            <%= link_to "Messages <div id='message-num'>#{num}</div>".html_safe, messages_url %>
            <%=  %>
          </li>
          <li><%= link_to "Help", "#" %></li>
          <li><%= link_to "Sign Out", session_url, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign In", new_session_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>
      </ul>
      </section>
    </div>

  </div>

<style>
  #main-nav {
    float: left;
  }

  #main-nav > ul {
    width: 650px;
    height: 45px;
  }

  #main-nav > ul > div {
    display: inline;
    float: left;
    height: 45px;
    width: 125px;
  }

  #main-nav > ul > div > li {
    float: left;
    margin: 15px auto;
    color: white;
  }

  #middle-strip {
    display:block;
    font-family: sans-serif;
    background-color: blue;
  }

  #middle-strip-content {
    width: 650px;
    margin: 0px auto;
    height: 45px;
  }

</style>

<div id="middle-strip" class="group">

  <nav id="middle-strip-content" class="group">
    <section id="main-nav" class="group">
      <ul>
        <div class="group"><li><%= link_to "Home", root_url %></li></div>
        <% food_link = current_user ? diary_user_url(current_user) : foods_url %>
        <div class="group"><li><%= link_to "Food", food_link %></li></div>
        <div class="group"><li>Exercise</li></div>
        <div class="group"><li>Reports</li></div>
      </ul>
    </section>
  </nav>

</div>

<style>

  #sub-nav > li {
    float: left;
    display: inline;
    width: 100px;
  }

  #bottom-strip {
    display:block;
    font-family: sans-serif;
    background-color: navy;
  }

  .bottom-strip-content {
    width: 650px;
    margin: 0px auto;
    height: 45px;
  }

  .sub-nav {
    color: white;
    display: inline;
  }

  .sub-nav > div {
    float: left;
    display: inline;
    height: 45px;
    width: 100px;
  }

  .sub-nav > div > li {
    float: left;
    display: inline;
    margin: 15px auto;
  }

</style>

<div id="bottom-strip" class="group">
  <% goal_link = current_goal ? goal_url(current_goal) : new_goal_url %>

  <nav class="group bottom-strip-content">
    <ul class="group sub-nav">
      <div><li><%= link_to "Goals", goal_link %></li></div>
      <div><li><%= link_to "Check-in", current_user ? new_user_check_in_url(current_user) : "#" %></li></div>
      <div><li><%= link_to "Profile", current_user ? user_url(current_user) : "#" %></li></div>
      <div><li><%= link_to "Friends", current_user ? friends_user_url(current_user) : "#" %></li></div>
      <div><li><%= link_to "Setting", root_url %></li></div>
    </ul>
  </nav>

</div>

