<style>

html, body, header, nav, h1, ul, li, div {
  border: 0;
  margin: 0;
  padding: 0;
  font: inherit;
  list-style-type: none;
}

body {
  font-family: sans-serif;
}

a {
  color: #00F;
  text-decoration: none;
}

.group:after {
  clear: both;
  content: "";
  display: block;
}

#top-strip {
  display: block;
  background-color: white;
}

header a {
  color: #FFF;
}

#top-strip-content {
  width: 650px;
  margin: 0px auto;
  height: 79px;
}

#logo {
  margin: 0px auto;
  float: left;
}

#user-links {
  margin: 0px auto;
  float: right;
}

#user-links > ul > li {
  float: left;
  display: block;
}

#user-links > ul > li > a {
  padding: 30px 15px;
  color: black;
  display: block;
}

</style>

<header>
  <div id="top-strip" class="group">

    <div id="top-strip-content" class="group">
      <div id="logo">
      <%= link_to image_tag("logo.png", size: "128x75"), root_url %>
      </div>

      <section id="user-links" class="group">
        <ul>
        <% if current_user %>
          <li><%= link_to "Hi, #{current_user.username}!", user_url(current_user) %></li>
          <li><%= link_to "Messages", "#" %></li>
          <li><%= link_to "Help", "#" %></li>
          <li><%= link_to "Settings", "#" %></li>
          <li><%= link_to "Sign Out", session_url, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign In", new_session_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>
      </ul>
      </section>
    </div>

  </div>

<style>
  #main-nav {
    float: left;
  }

  #main-nav > ul {
    width: 650px;
    height: 45px;
  }

  #main-nav > ul > div {
    display: inline;
    float: left;
    height: 45px;
    width: 125px;
  }

  #main-nav > ul > div > li {
    float: left;
    margin: 15px auto;
    color: white;
  }

  #middle-strip {
    display:block;
    font-family: sans-serif;
    background-color: blue;
  }

  #middle-strip-content {
    width: 650px;
    margin: 0px auto;
    height: 45px;
  }

</style>

<div id="middle-strip" class="group">

  <nav id="middle-strip-content" class="group">
    <section id="main-nav" class="group">
      <ul>
        <div class="group"><li><%= link_to "Home", root_url %></li></div>
        <div class="group"><li><%= link_to "Food", foods_url %></li></div>
        <div class="group"><li>Exercise</li></div>
        <div class="group"><li>Reports</li></div>
      </ul>
    </section>
  </nav>

</div>

<style>

  #sub-nav > li {
    float: left;
    display: inline;
    width: 100px;
  }

  #bottom-strip {
    display:block;
    font-family: sans-serif;
    background-color: navy;
  }

  .bottom-strip-content {
    width: 650px;
    margin: 0px auto;
    height: 45px;
  }

  .sub-nav {
    color: white;
    display: inline;
  }

  .sub-nav > div {
    float: left;
    display: inline;
    height: 45px;
    width: 100px;
  }

  .sub-nav > div > li {
    float: left;
    display: inline;
    margin: 15px auto;
  }

</style>

<div id="bottom-strip" class="group">
  <% goal_link = current_goal ? goal_url(current_goal) : new_goal_url %>

  <nav class="group bottom-strip-content">
    <ul class="group sub-nav">
      <div><li><%= link_to "Goals", goal_link %></li></div>
      <div><li><%= link_to "Check-in", root_url%></li></div>
      <div><li><%= link_to "Profile", current_user ? user_url(current_user) : "#" %></li></div>
      <div><li><%= link_to "Friends", root_url %></li></div>
      <div><li><%= link_to "Setting", root_url %></li></div>
    </ul>
  </nav>

</div>

