<form id="food-form"
  action="<%= @entry ? search_daily_entry_foods_url(@entry) : search_foods_url %>"
  method="get"
  class="group">
  <h1>Search the food database</h1>

  <div>
    <label for="food-name">Enter a food</label>
    <input id="food-name" type="text" name="food[name]">
  </div>

  <div>
    <input class="button" type="submit" value="Find foods">
  </div>

  <% if current_user %>
    <div class="link-button">
      <%= link_to "Add a food", new_food_url %>
    </div>
  <% end %>
</form>