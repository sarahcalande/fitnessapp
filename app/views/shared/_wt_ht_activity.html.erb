<div>
<label for="current_wt">Current Weight</label>
  <input type="text"
    name="user[starting_wt]"
    value="<%= @user.current_wt %>"
    id="current_wt">
</div>

<div>
<label for="goal_wt">Goal Weight</label>
  <input type="text"
    name="user[goal_wt]"
    value="<%= @user.goal_wt %>"
    id="goal_wt">
</div>

<div>
<label>Height: &nbsp
  <select name="user[height]">
    <% (24..99).each do |num| %>
      <option <%= 'selected' if num == @user.height %>
        value="<%= num %>"><%= num %></option>
    <% end %>
  </select>
</label>
</div>

<div>Activity Level
  <br>
  <input type="radio"
    name="user[activity_level]"
    value="0"
    id="sedentary"
    <%= 'checked' if @user.activity_level == 0 %>>
  <label class="radio" for="sedentary">Sedentary: little to no exercise</label>

  <br>
  <input type="radio"
    name="user[activity_level]"
    value="1"
    id="light_active"
    <%= 'checked' if @user.activity_level == 1 %>>
  <label class="radio" for="light_active">Light Activity: light exercise or sports 1-3 days per week</label>

  <br>
  <input type="radio"
    name="user[activity_level]"
    value="2"
    id="moderate"
    <%= 'checked' if @user.activity_level == 2 %>>
  <label class="radio" for="moderate">Moderate Activity: moderate exercise or sports 3-5 days per week</label>

  <br>
  <input type="radio"
    name="user[activity_level]"
    value="3"
    id="very_active"
    <%= 'checked' if @user.activity_level == 3 %>>
  <label class="radio" for="very_active">Very Active: heavy exercise or sports 6-7 days per week</label>
</div>